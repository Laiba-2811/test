@using BlogApplication_Mcsf19a002.Models
@model Blog
@{ Layout = "/Views/Shared/_Layout.cshtml"; }
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="BlogView">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="ProfileView">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div>

    <section class="container-fluid p-lg-2">
        <section class="container-fluid p-lg-2">
            <div class="p-3">
                <table class="table table-light table-hover table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">User Profile</th>
                        </tr>
                        <tr>

                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.ID</td>
                            <td>@Model.Name</td>
                            <td>@Model.Email</td>
                            <td>@Model.Password</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </section>
    
</div>