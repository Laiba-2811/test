<div class="post-body text-center">
    <table class="table table-light table-hover table-striped">
        <thead>
            <tr>
                <th> </th>
                <th></th>
            </tr>
        </thead>
        @if (Model != null)
        {
            foreach (BlogApplication_Mcsf19a002.Models.Post p in Model)
            {
                if (p.Email == Gmail.gmail)
                {
                    <tbody>
                        <tr>
                            <td>
                                <h3>@p.Name</h3>
                                <h5>@p.Title</h5>
                                <p>@p.Content</p>
                            </td>
                            <td>
                                <a class="btn btn-info" asp-controller="Home" asp-action="PostView" asp-route-id="@p.ID">View</a>
                                <a class="btn btn-secondary" asp-controller="Home" asp-action="Edit" asp-route-id="@p.ID">Update</a>
                                <a class="btn btn-warning" asp-controller="Home" asp-action="Remove" asp-route-id="@p.ID">Remove</a>
                            </td>
                        </tr>

                    </tbody>

                }
                else
                {
                    <tbody>
                        <tr>
                            <td>
                                <h3>@p.Name</h3>
                                <h5>@p.Title</h5>
                                <p>@p.Content</p>
                            </td>
                            <td>
                                <a class="btn btn-info" asp-action="PostView" asp-route-id="@p.ID">View</a>
                            </td>
                        </tr>

                    </tbody>
                }
            }


         }
    </table>

</div>


