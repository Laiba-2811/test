@model List<BlogApplication_Mcsf19a002.Models.Post>
@using BlogApplication_Mcsf19a002.Controllers
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="BlogView">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="ProfileView">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div>
    <section class="p-lg-2">
        <div class="text-center">
            <div class="text-center"><a class="text-center" asp-controller="Home" asp-action="AllUsers">Users</a></div>
            <table class="table table-light table-hover table-striped">
                @if (Model != null)
                 {
                    foreach (BlogApplication_Mcsf19a002.Models.Post p in Model)
                    {
    <tbody>
        <tr>
            <td>
                <h3>@p.Name</h3>
                <h5>@p.Title</h5>
                <p>@p.Content</p>
            </td>
            <td class="text-center">
                <a class="btn btn-info" asp-action="UserProfile" asp-route-id="@p.ID">View Profile</a>
                <a class="btn btn-secondary" asp-action="EditProfile" asp-route-id="@p.ID">Edit Profile</a>
                <a class="btn btn-warning" asp-action="RemoveAccount" asp-route-id="@p.ID">Remove Account</a>
            </td>
        </tr>
    </tbody>        }

                 }
            </table>
        </div>
    </section>
</div>

